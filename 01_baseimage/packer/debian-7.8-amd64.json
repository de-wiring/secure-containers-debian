{
  "variables": {
    "chef_version": "12.0.0",
    "mirror": "http://cdimage.debian.org/debian-cd"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-7/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=de_DE <wait>",
        "kbd-chooser/method=de <wait>",
        "keyboard-configuration/xkb-keymap=de <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=de-wiring.net <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=de <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480, 
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "5f611b40b0803f8be1180da561cfbc159e381599",
      "iso_checksum_type": "sha1",
      "iso_url": "{{user `mirror`}}/7.8.0/amd64/iso-cd/debian-7.8.0-amd64-CD-1.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "dewiring-debian-7.8-amd64",
      "output_directory": "dewiring-debian-7.8-amd64-virtualbox",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "384" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../builds/{{.Provider}}/dewiring_debian-7.8.box"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/debian/update.sh",
        "scripts/common/sshd.sh",
        "scripts/debian/networking.sh",
        "scripts/debian/sudoers.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/chef.sh",
        "scripts/debian/backport_kernel316.sh",
        "scripts/common/grub_cgroup_enable.sh",
        "scripts/debian/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell",
      "environment_vars": [ "CHEF_VERSION={{user `chef_version`}}" ]
    }
  ]
}
